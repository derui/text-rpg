open MyUtil

.PHONY: all
#
# This project requires ocamlfind (default - false).
#
USE_OCAMLFIND = true
#
OCAMLPACKS[] =
	core
	num
	ppx_sexp_conv
	ppx_sexp_value
	sexplib
	sdlcaml
	sdlcaml_ttf
	lwt
	lwt.unix
#
if $(not $(OCAMLFIND_EXISTS))
   eprintln(This project requires ocamlfind, but is was not found.)
   eprintln(You need to install ocamlfind and run "omake --configure".)
   exit 1

#
# Include path
#
OCAMLINCLUDES += 

#
# Compile native or byte code?
#
# The default values are defined as follows:
#
NATIVE_ENABLED = $(OCAMLOPT_EXISTS)
BYTE_ENABLED = true

MY_LINK_FLAGS = $(shell sdl2-config --cflags --libs) -lSDL2_ttf -DDEBUG
if $(IsMac)
	MY_LINK_FLAGS += -framework OpenGL
	export
else
	MY_LINK_FLAGS += -lGL
	export

#
# Various options
#
OCAMLFLAGS    += -bin-annot -g -thread
# OCAMLCFLAGS   +=
# OCAMLOPTFLAGS +=
OCAML_LINK_FLAGS += -cclib "$(MY_LINK_FLAGS)"
# OCAML_BYTE_LINK_FLAGS +=
# OCAML_NATIVE_LINK_FLAGS +=

#
# OCAML_LIBS += 
# OCAML_CLIBS +=
# OCAML_OTHER_LIBS +=
# OCAML_LIB_FLAGS += -cclib -lsdlcaml

FILES[]= $(removesuffix $(ls *.ml))

OCamlProgram(main, $(FILES))

all: main
